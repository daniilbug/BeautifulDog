<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/fullPhotoMotionLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/full_photo_scene">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/fullPhotoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fullPhotoImage"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fullPhotoUnlike"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/ic_unlike"
            android:tint="?colorOnSurface"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fullPhotoShare"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/ic_share"
            android:tint="?colorOnSurface"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fullPhotoRight"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/ic_right_arrow"
            android:tint="?colorOnSurface"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fullPhotoLeft"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/ic_left_arrow"
            android:tint="?colorOnSurface"/>

</androidx.constraintlayout.motion.widget.MotionLayout>
