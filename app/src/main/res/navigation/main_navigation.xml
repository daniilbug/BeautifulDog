<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_navigation" app:startDestination="@id/randomDogFragment">

    <fragment
            android:id="@+id/randomDogFragment" android:name="com.github.daniilbug.beautifuldog.ui.RandomDogFragment"
            android:label="RandomDogFragment"
            tools:layout="@layout/fragment_random_dog"/>
    <fragment android:id="@+id/likedDogsFragment" android:name="com.github.daniilbug.beautifuldog.ui.LikedDogsFragment"
              android:label="LikedDogsFragment"
              tools:layout="@layout/fragment_liked_dogs">
        <action android:id="@+id/showFullPhoto"
                app:destination="@id/fullPhotoFragment">
            <argument android:name="photoUrl" app:argType="string" app:nullable="false"/>
        </action>
    </fragment>
    <fragment android:id="@+id/aboutFragment" android:name="com.github.daniilbug.beautifuldog.ui.AboutFragment"
              android:label="AboutFragment"
              tools:layout="@layout/fragment_about"/>
    <fragment android:id="@+id/fullPhotoFragment" android:name="com.github.daniilbug.beautifuldog.ui.FullPhotoFragment"
              android:label="FullPhotoFragment"
              tools:layout="@layout/fragment_full_photo"/>
</navigation>